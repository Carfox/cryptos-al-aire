---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Cursos de Blockchain',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Cursos de Blockchain"
    title="Planes que se ajustan a tus necesidades"
    subtitle="Encuentra el curso perfecto para iniciar tu viaje en el mundo del blockchain."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Nuestros planes"
    subtitle="Solo paga por lo que necesitas"
    prices={[
      {
        title: 'Básico',
        subtitle: 'Ideal para principiantes',
        price: 49,
        period: 'por curso',
        items: [
          {
            description: 'Introducción al blockchain',
          },
          {
            description: 'Fundamentos de criptomonedas',
          },
          {
            description: 'Acceso a material básico de estudio',
          },
          {
            description: 'Soporte por correo electrónico',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Inscribirse',
          href: '#',
        },
      },
      {
        title: 'Intermedio',
        subtitle: 'Para desarrolladores y entusiastas',
        price: 129,
        period: 'por curso',
        items: [
          {
            description: 'Desarrollo de smart contracts',
          },
          {
            description: 'Plataformas como Ethereum y Solana',
          },
          {
            description: 'Proyectos prácticos guiados',
          },
          {
            description: 'Acceso a mentorías en grupo',
          },
          {
            description: 'Soporte por chat en vivo',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Inscribirse',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Más popular',
      },
      {
        title: 'Avanzado',
        subtitle: 'Diseñado para profesionales',
        price: 299,
        period: 'por curso',
        items: [
          {
            description: 'Desarrollo avanzado de DApps',
          },
          {
            description: 'Integración de blockchain con APIs',
          },
          {
            description: 'Análisis de casos reales',
          },
          {
            description: 'Certificación oficial incluida',
          },
          {
            description: 'Mentoría personalizada 1 a 1',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Inscribirse',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Características de los cursos"
    subtitle="Descubre por qué nuestros cursos son la mejor opción"
    columns={2}
    items={[
      {
        title: 'Material actualizado',
        description: 'Contenido revisado regularmente para reflejar los últimos avances en blockchain.',
        icon: 'tabler:book',
      },
      {
        title: 'Certificaciones reconocidas',
        description: 'Obtén certificados que avalan tu aprendizaje en la industria.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Acceso a proyectos prácticos',
        description: 'Aplica lo aprendido construyendo soluciones blockchain reales.',
        icon: 'tabler:code',
      },
      {
        title: 'Comunidad activa',
        description: 'Únete a una red global de estudiantes y expertos.',
        icon: 'tabler:users',
      },
      {
        title: 'Mentoría profesional',
        description: 'Recibe orientación de instructores con experiencia en el sector.',
        icon: 'tabler:school',
      },
      {
        title: 'Flexibilidad de horarios',
        description: 'Aprende a tu propio ritmo con acceso 24/7 al contenido.',
        icon: 'tabler:clock',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Tu camino para dominar blockchain"
    tagline="Un proceso simple y efectivo"
    isReversed={true}
    items={[
      {
        title: 'Elige un curso',
        icon: 'tabler:number-1',
      },
      {
        title: 'Regístrate en la plataforma',
        icon: 'tabler:number-2',
      },
      {
        title: 'Accede al contenido',
        icon: 'tabler:number-3',
      },
      {
        title: 'Participa en proyectos',
        icon: 'tabler:number-4',
      },
      {
        title: 'Obtén tu certificación',
        icon: 'tabler:number-5',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Preguntas frecuentes"
    subtitle="Resolvemos tus dudas sobre nuestros cursos de blockchain."
    columns={1}
    items={[
      {
        title: '¿Necesito experiencia previa para inscribirme?',
        description:
          'No, tenemos cursos para principiantes que no requieren conocimientos previos.',
      },
      {
        title: '¿Los cursos incluyen certificación?',
        description:
          'Sí, todos los cursos incluyen una certificación al completarlos con éxito.',
      },
      {
        title: '¿Cómo accedo al contenido del curso?',
        description:
          'Todo el contenido está disponible en línea a través de nuestra plataforma una vez que te inscribas.',
      },
      {
        title: '¿Puedo cambiarme de plan?',
        description:
          'Claro, puedes actualizar o cambiar de plan según tus necesidades.',
      },
      {
        title: '¿Qué métodos de pago aceptan?',
        description:
          'Aceptamos tarjetas de crédito, débito y pagos por plataformas digitales seguras.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="¿Listo para comenzar tu viaje en blockchain?"
    subtitle="Inscríbete ahora y transforma tu futuro."
    actions={[
      {
        variant: 'primary',
        text: 'Inscribirme ahora',
        href: '/',
      },
    ]}
  />
</Layout>
