---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="¡Conéctate con nosotros!" />

  <ContactUs
    id="form"
    title="¡Envíanos un mensaje hoy mismo!"
    subtitle="Para respuestas rápidas, explora nuestra sección de Preguntas Frecuentes. Es posible que encuentres la solución que buscas allí mismo. Si no, nuestro equipo de soporte estará encantado de ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo Electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte responde típicamente en menos de 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos aquí para ayudarte!"
    items={[
      {
        title: 'Soporte general',
        description: `Contáctanos para preguntas relacionadas con la gestión de tu cuenta, navegación por nuestra plataforma de cursos, problemas con pagos, acceso a materiales comprados o dudas generales sobre el funcionamiento del sitio.`,
      },
      {
        title: 'Consultas sobre cursos',
        description:
          'Habla con nosotros sobre preguntas relacionadas con los contenidos de nuestros cursos, personalización del aprendizaje, opciones de certificación, o cualquier otra duda específica sobre nuestros temas de criptomonedas.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Contáctanos si tienes problemas técnicos como errores al acceder a los cursos, dificultad para descargar recursos, problemas de compatibilidad o cualquier otro desafío técnico relacionado con tu aprendizaje sobre criptomonedas.',
      },
      {
        title: 'Teléfono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo Electrónico',
        description: 'contact@crypto-support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: '1234 Blockchain Ave, 56789, Miami, EE. UU.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
